                        <thead>
                           <tr>
                               <th>รายการ</th>
                               <th>จำนวนเงิน</th>
                           </tr>
                       </thead>
                       <tbody>
                           <tr>
                               <td>ค่าเช่าห้อง</td>
                               <td><%=room.rent%></td>
                           </tr>
                           <tr>
                               <td id="elect-unit-bill">ค่าไฟ ( - หน่วย)</td>
                               <td id="elect-bill">-</td>
                           </tr>
                           <tr>
                               <td id="water-unit-bill">ค่าน้ำ ( - หน่วย)</td>
                               <td id="water-bill">-</td>
                           </tr>
