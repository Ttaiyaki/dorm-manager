<%- include('../partials/head') %>
<body>
    <%- include('../partials/nav') %>
    <%- include('../partials/popup') %>
    <main class="card shadow-sm" style="margin: auto; margin-top: 70px; margin-bottom: 70px; width: 80%;">
        <!-- Profile Image - Left side -->
        <div class="m-0">
            <button type="button" class="d-flex align-items-center btn" onclick="window.location.href = '/lessee'" style="padding-left: 10px; margin-top: 20px; margin-left: 20px;">
                <i class="fa-solid fa-chevron-left fs-5"><span class="fw-bold text-center ms-2">กลับ</span></i>
            </button>
        </div>
        <div class="d-flex">
            <div class="justify-content-center mt-1" style="width: 30%;">
                <div class="m-3 mt-0 text-center">
                    <br>
                    <img alt="Profile Picture" class="rounded-circle img-fluid" width="60%" src="<%= user.user_img %>" style="aspect-ratio: 1 / 1; object-fit: cover;">
                    <h3 style="margin-top: 20px;"><strong><%=user.user_name%></strong></h3>
                    <button type="button" onclick="window.location.href = '/lessee/profile/edit'" class="btn btn-outline-dark" style="margin-bottom: 30px;"><i class="bi bi-pencil-square"></i> แก้ไขข้อมูล</button>
                </div>
            </div>

            <div class="vl"></div>

            <!-- Profile and Room Information - Right side -->
            <div class="mt-5" style="width: 70%;">
                <h2><strong>ข้อมูลส่วนตัว</strong></h2>
                <hr class="mt-0">
                <div class="mb-4" style="padding-left: 30px;">
                    <!-- db ชื่อ, อายุ, เบอร์โทร -->
                    <p style="font-size: 1.2rem;"><strong>ชื่อ :</strong> <%=user.first_name%> <%=user.last_name%></p>
                    <p style="font-size: 1.2rem;"><strong>อีเมล์ :</strong> <%=user.email%></p>
                    <p style="font-size: 1.2rem;"><strong>เบอร์โทร :</strong> <%=user.phone%></p>
                </div>

                <h2><strong>ข้อมูลห้องพัก</strong></h2>
                <hr class="mt-0">
                <div class="mb-5" style="padding-left: 30px;">
                    <!-- db เลขที่ห้อง, ค่าเช่า, ที่อยู่ -->
                    <div class="row">
                        <p class="col" style="font-size: 1.2rem;"><strong>วันที่ทำสัญญา : </strong> <%=user.date_start%></p>
                        <p class="col" style="font-size: 1.2rem;"><strong>วันที่หมดสัญญา :</strong> <%=user.date_end%></p>
                    </div>
                    <p style="font-size: 1.2rem;"><strong>เลขที่ห้อง :</strong> <%=room.room_number%></p>
                    <p style="font-size: 1.2rem;"><strong>ที่อยู่ :</strong> ตึก <%=room.building%> ชั้น <%=room.floor%></p>
                </div>
            </div>
        </div>
    </main>
</body>
<%- include('../partials/footer')%>
</html>